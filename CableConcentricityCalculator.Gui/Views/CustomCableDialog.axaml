<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="CableConcentricityCalculator.Gui.Views.CustomCableDialog"
        Title="Create Custom Cable"
        Width="500" Height="650"
        WindowStartupLocation="CenterOwner"
        CanResize="False">

    <Window.Styles>
        <Style Selector="TextBlock.label">
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>
        <Style Selector="TextBox, ComboBox, NumericUpDown">
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="*,Auto">
        <ScrollViewer Grid.Row="0" Padding="16">
            <StackPanel Spacing="8">
                <!-- Basic Info -->
                <TextBlock Text="Basic Information" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Part Number:" Classes="label"/>
                    <TextBox Grid.Column="1" x:Name="PartNumberBox" Watermark="e.g., CUSTOM-22-BLK"/>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Name:" Classes="label"/>
                    <TextBox Grid.Column="1" x:Name="NameBox" Watermark="Cable description"/>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Manufacturer:" Classes="label"/>
                    <TextBox Grid.Column="1" x:Name="ManufacturerBox" Watermark="Manufacturer name"/>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Cable Type:" Classes="label"/>
                    <ComboBox Grid.Column="1" x:Name="TypeCombo" SelectedIndex="0">
                        <ComboBoxItem Content="Single Core"/>
                        <ComboBoxItem Content="Multi Core"/>
                        <ComboBoxItem Content="Twisted Pair"/>
                        <ComboBoxItem Content="Coaxial"/>
                        <ComboBoxItem Content="Filler"/>
                    </ComboBox>
                </Grid>

                <Separator Margin="0,8"/>

                <!-- Conductor Properties -->
                <TextBlock Text="Conductor Properties" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Wire Gauge:" Classes="label"/>
                    <ComboBox Grid.Column="1" x:Name="GaugeCombo" SelectedIndex="4">
                        <ComboBoxItem Content="30 AWG"/>
                        <ComboBoxItem Content="28 AWG"/>
                        <ComboBoxItem Content="26 AWG"/>
                        <ComboBoxItem Content="24 AWG"/>
                        <ComboBoxItem Content="22 AWG"/>
                        <ComboBoxItem Content="20 AWG"/>
                        <ComboBoxItem Content="18 AWG"/>
                        <ComboBoxItem Content="16 AWG"/>
                        <ComboBoxItem Content="14 AWG"/>
                        <ComboBoxItem Content="12 AWG"/>
                        <ComboBoxItem Content="10 AWG"/>
                    </ComboBox>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Core Count:" Classes="label"/>
                    <NumericUpDown Grid.Column="1" x:Name="CoreCountUpDown" Value="1" Minimum="1" Maximum="50"/>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Conductor Ø:" Classes="label"/>
                    <NumericUpDown Grid.Column="1" x:Name="ConductorDiaUpDown" Value="0.644" Minimum="0.1" Maximum="5" Increment="0.01" FormatString="0.000 mm"/>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Conductor:" Classes="label"/>
                    <ComboBox Grid.Column="1" x:Name="ConductorMaterialCombo" SelectedIndex="0">
                        <ComboBoxItem Content="Copper"/>
                        <ComboBoxItem Content="Tinned Copper"/>
                        <ComboBoxItem Content="Silver Plated Copper"/>
                        <ComboBoxItem Content="Nickel Plated Copper"/>
                    </ComboBox>
                </Grid>

                <Separator Margin="0,8"/>

                <!-- Insulation Properties -->
                <TextBlock Text="Insulation Properties" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Insulation Ø:" Classes="label"/>
                    <NumericUpDown Grid.Column="1" x:Name="InsulationThickUpDown" Value="0.20" Minimum="0.05" Maximum="2" Increment="0.01" FormatString="0.00 mm"/>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Insulation Color:" Classes="label"/>
                    <ComboBox Grid.Column="1" x:Name="InsulationColorCombo" SelectedIndex="0">
                        <ComboBoxItem Content="White"/>
                        <ComboBoxItem Content="Black"/>
                        <ComboBoxItem Content="Red"/>
                        <ComboBoxItem Content="Green"/>
                        <ComboBoxItem Content="Blue"/>
                        <ComboBoxItem Content="Yellow"/>
                        <ComboBoxItem Content="Orange"/>
                        <ComboBoxItem Content="Brown"/>
                        <ComboBoxItem Content="Violet"/>
                        <ComboBoxItem Content="Gray"/>
                        <ComboBoxItem Content="Pink"/>
                        <ComboBoxItem Content="Natural"/>
                    </ComboBox>
                </Grid>

                <Separator Margin="0,8"/>

                <!-- Jacket Properties -->
                <TextBlock Text="Jacket Properties" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Jacket Thickness:" Classes="label"/>
                    <NumericUpDown Grid.Column="1" x:Name="JacketThickUpDown" Value="0.30" Minimum="0" Maximum="3" Increment="0.05" FormatString="0.00 mm"/>
                </Grid>

                <Grid ColumnDefinitions="120,*">
                    <TextBlock Text="Jacket Color:" Classes="label"/>
                    <ComboBox Grid.Column="1" x:Name="JacketColorCombo" SelectedIndex="1">
                        <ComboBoxItem Content="White"/>
                        <ComboBoxItem Content="Black"/>
                        <ComboBoxItem Content="Red"/>
                        <ComboBoxItem Content="Green"/>
                        <ComboBoxItem Content="Blue"/>
                        <ComboBoxItem Content="Yellow"/>
                        <ComboBoxItem Content="Orange"/>
                        <ComboBoxItem Content="Brown"/>
                        <ComboBoxItem Content="Gray"/>
                    </ComboBox>
                </Grid>

                <Separator Margin="0,8"/>

                <!-- Shielding -->
                <TextBlock Text="Shielding" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,8"/>

                <CheckBox x:Name="HasShieldCheck" Content="Has Shield" Margin="0,0,0,8"/>

                <Grid ColumnDefinitions="120,*" IsVisible="{Binding #HasShieldCheck.IsChecked}">
                    <TextBlock Text="Shield Type:" Classes="label"/>
                    <ComboBox Grid.Column="1" x:Name="ShieldTypeCombo" SelectedIndex="0">
                        <ComboBoxItem Content="Braid"/>
                        <ComboBoxItem Content="Foil"/>
                        <ComboBoxItem Content="Foil and Braid"/>
                        <ComboBoxItem Content="Spiral"/>
                    </ComboBox>
                </Grid>

                <Grid ColumnDefinitions="120,*" IsVisible="{Binding #HasShieldCheck.IsChecked}">
                    <TextBlock Text="Shield Thickness:" Classes="label"/>
                    <NumericUpDown Grid.Column="1" x:Name="ShieldThickUpDown" Value="0.15" Minimum="0.05" Maximum="1" Increment="0.01" FormatString="0.00 mm"/>
                </Grid>

                <Grid ColumnDefinitions="120,*" IsVisible="{Binding #HasShieldCheck.IsChecked}">
                    <TextBlock Text="Coverage %:" Classes="label"/>
                    <NumericUpDown Grid.Column="1" x:Name="ShieldCoverageUpDown" Value="85" Minimum="50" Maximum="100" FormatString="0 %"/>
                </Grid>

                <CheckBox x:Name="HasDrainWireCheck" Content="Has Drain Wire" Margin="0,0,0,8" IsVisible="{Binding #HasShieldCheck.IsChecked}"/>

                <!-- Calculated OD Preview -->
                <Border Background="#F0F0F0" Padding="12" CornerRadius="4" Margin="0,8,0,0">
                    <StackPanel>
                        <TextBlock Text="Calculated Overall Diameter" FontWeight="SemiBold"/>
                        <TextBlock x:Name="CalculatedOdText" Text="0.00 mm" FontSize="18" Foreground="#0078D4"/>
                    </StackPanel>
                </Border>

                <Separator Margin="0,8"/>

                <!-- Save to Library Option -->
                <CheckBox x:Name="SaveToLibraryCheck" Content="Save this cable to my library for future use" IsChecked="True" Margin="0,8"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Border Grid.Row="1" Background="#F5F5F5" Padding="16">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
                <Button x:Name="CancelButton" Content="Cancel" Padding="16,8"/>
                <Button x:Name="CreateButton" Content="Create Cable" Padding="16,8" Classes="accent"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
